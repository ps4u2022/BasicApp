@model DGCARTEL.ViewModels.PayUmoneyIntegration
@{
    ViewBag.Title = "Payment Failed";
    Layout = "~/Views/Shared/_EntryLayout.cshtml";
}

<h2 class="text-center text-white mb-4">Payment Failed</h2>

<div class="container py-5">
    <div class="row">
        <div class="col-md-9 mx-auto">
            @using (Html.BeginForm("DownloadInvoice", "Donation", FormMethod.Post))
            {
                <table class="table table-bordered">
                    <thead><tr><th>Name:</th><th>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.FIRSTNAME) @Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.LASTNAME)</th></tr></thead>
                    <tbody>
                        <tr><td>Transaction Id</td><td>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.TXNID)</td> </tr>
                        <tr><td>Amount</td><td>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.AMOUNT)</td> </tr>
                        <tr><td>PayUmoneyId</td><td>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.PAYUMONEYID)</td> </tr>
                        <tr><td>Added On</td><td>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.ADDEDON)</td> </tr>
                        <tr><td>Status</td><td>@Html.DisplayFor(model => model.PAYUMONEY_FAIL_DATA.STATUS)</td> </tr>
                    </tbody>
                </table>               
            }
        </div>
    </div>
</div>
