<div class="container py-5">
    <div class="row">
        <div class="col-md-9 mx-auto">
            @using (Html.BeginForm("DownloadInvoice", "Donation", FormMethod.Post))
            {
                <table class="table table-bordered">
                    <thead><tr><th>Name:</th><th>@Html.DisplayFor(model => model.PAYUMONEY_DATA.FIRSTNAME) @Html.DisplayFor(model => model.PAYUMONEY_DATA.LASTNAME)</th></tr></thead>
